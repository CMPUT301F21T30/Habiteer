<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/habit_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Habit title"
        android:textSize="24dp">

    </TextView>

    <com.app.progresviews.ProgressWheel
        android:id="@+id/wheelProgress_habits"
        android:layout_width="136dp"
        android:layout_height="match_parent"
        app:barWidth="10dp"
        app:countText=""
        app:countTextColor="@android:color/black"
        app:countTextSize="14dp"
        app:defTextColor="@android:color/black"
        app:defTextSize="12sp"
        app:definitionText="%"
        app:marginBtwText="10dp"
        app:percentage="0"
        app:progressColor="#94673AB7" />

</LinearLayout>