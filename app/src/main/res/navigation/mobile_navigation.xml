<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_listhabit">

    <fragment
        android:id="@+id/navigation_listhabit"
        android:name="com.CMPUT301F21T30.Habiteer.ui.habit.ListHabitFragment"
        android:label="@string/title_ListHabit"
        tools:layout="@layout/fragment_listhabit" >
        <action
            android:id="@+id/action_navigation_listhabit_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.CMPUT301F21T30.Habiteer.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.CMPUT301F21T30.Habiteer.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addEditHabitFragment"
        android:name="com.CMPUT301F21T30.Habiteer.ui.addEditHabit.AddEditHabitFragment"
        android:label="fragment_addedithabit"
        tools:layout="@layout/fragment_addedithabit" >
        <action
            android:id="@+id/action_addEditHabitFragment_to_navigation_listhabit"
            app:destination="@id/navigation_listhabit"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>